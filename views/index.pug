extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Let's make the web great together

      p.lead.text-light
        | This portfolio is marketing document meant to demostrate my skills, including, but no limited to:
        | client and server side javascript web development, soft skills and lifelong learning.   
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.main_shot_image_url}`)
            h5= project.project_name
      
